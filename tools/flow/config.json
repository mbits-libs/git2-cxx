{
  "matrix": {
    "os": ["ubuntu", "windows"],
    "compiler": ["gcc", "clang", "msvc"],
    "build_type": ["Release", "Debug"],
    "sanitizer": [true, false]
  },
  "exclude": [
    {"os": "windows", "compiler": "clang"},
    {"os": "windows", "compiler": "gcc"},
    {"os": "ubuntu", "compiler": "msvc"},
    {"os": "windows", "sanitizer": true},
    {"build_type": "Release", "sanitizer": true}
  ],
  "include": [
    {"build_type": "Debug", "preset": "debug"},
    {"build_type": "Release", "preset": "release"},
    {
      "os": "ubuntu",
      "conan_settings": ["compiler.libcxx=libstdc++11"],
      "build_generator": "ninja"
    },
    {"os": "windows", "build_generator": "msbuild", "report_os": "Windows"},
    {"os": "ubuntu", "report_os": "Linux"},
    {"compiler": "gcc", "report_compiler": "GNU"},
    {"compiler": "clang", "report_compiler": "Clang"},
    {"compiler": "msvc", "report_compiler": "MSVC"},
    {
      "os": "ubuntu",
      "build_type": "Release",
      "sanitizer": false,
      "cpack_generator": ["TGZ"]
    },
    {
      "os": "ubuntu",
      "build_type": "Debug",
      "compiler": "gcc",
      "coverage": true
    },
    {
      "os": "windows",
      "build_type": "Release",
      "cpack_generator": ["ZIP"],
      "conan_settings": ["compiler.runtime=MD"]
    },
    {
      "os": "windows",
      "build_type": "Debug",
      "conan_settings": ["compiler.runtime=MDd"]
    }
  ]
}
